name: R package build

on: workflow_dispatch

version: 2
jobs:
  build:
    docker:
      - image: rocker/geospatial:latest
    environment:
      R_LIBS: ~/R/Library
      R_REMOTES_NO_ERRORS_FROM_WARNINGS: true
      _R_CHECK_FORCE_SUGGESTS_: false
      NOT_CRAN: true
    steps:
      - restore_cache:
          keys:
            - r-pkg-cache-{{ arch }}-{{ .Branch }}
            - r-pkg-cache-{{ arch }}-
      - checkout
      - run:
          name: Install package dependencies
          command: |
            mkdir -p ~/R/Library
            Rscript -e 'install.packages(c("devtools","remotes","quadprog","MCMCpack","irlba","Rtsne","uwot","dplyr","Rcpp","RcppArmadillo","RcppParallel","progress","pbapply","ggplot2","ggrepel","cowplot","plotly","htmlwidgets","testthat","Ternary","raster","sp","utils","grid","gridExtra","phytools","fasterize","latticeExtra","picante","rasterVis","scales","slam","SpatialExtremes","ape","mapplots","Biobase","SQUAREM","boot","slam","fastTopics"))'
            Rscript -e 'devtools::install_github("kkdey/methclust",upgrade="never",force=TRUE)'
            Rscript -e 'devtools::install_github("kkdey/CountClust",upgrade="never",force=TRUE)'
      - run:
          name: Session information and installed package versions
          command: |
            Rscript -e 'sessionInfo()'
            Rscript -e 'installed.packages()[, c("Package", "Version")]'
            Rscript -e 'rmarkdown::pandoc_version()'
      - run:
          name: Build package
          command: R CMD build --no-build-vignettes --no-manual .
      - run:
          name: Check package
          no_output_timeout: 55m
          command: R CMD check --ignore-vignettes --no-manual --no-examples *tar.gz
      - store_artifacts:
          path: ecostructure.Rcheck/
      - save_cache:
          key: r-pkg-cache-{{ arch }}-{{ .Branch }}
          paths:
            - "~/R/Library"
